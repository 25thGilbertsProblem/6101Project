ScreenManager:
    MenuScreen:
    NoteScreen:
    SleepScreen:
    TaskScreen:

<MenuScreen>:
    name: "menu"

    MDBoxLayout:
        orientation: 'vertical'


        MDScreen:

            MDBottomAppBar:
                MDToolbar:
                    elevation:10
                    mode: 'end'
                    type: 'bottom'
                    icon: 'plus'
                    icon_color: .7, .2, .1,
                    on_action_button:app.navigation_draw()

            MDCard:
                radius:30
                size_hint_x: ".45"
                size_hint_y: ".25"
                pos_hint: {"center_x": .5, "center_y": .55}



            #Task

            MDFloatingActionButton:

                icon: "check-bold"
                pos_hint: {"center_x": .4, "center_y": .6}
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.current = 'task'

            #Sleep
            MDFloatingActionButton:

                icon: "sleep"
                pos_hint: {"center_x": .4, "center_y": .5}
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.current = 'sleep'

            #Notes
            MDFloatingActionButton:

                icon: "bookmark"
                pos_hint: {"center_x": .6, "center_y": .6}
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.current = 'note'


            #Edit
            MDFloatingActionButton:

                icon: "cog"
                pos_hint: {"center_x": .6, "center_y": .5}
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press:app.theme_cls.theme_style = "Light" if app.theme_cls.theme_style == "Dark" else 'Dark'


<NoteScreen>:
    name: "note"
    MDBoxLayout:
        orientation: 'vertical'

        MDScreen:

            MDBottomAppBar:
                MDToolbar:
                    elevation:10
                    mode: 'end'
                    type: 'bottom'
                    icon: 'plus'
                    icon_color: .7, .2, .1,
                    on_action_button:app.navigation_draw()

            MDFloatingActionButton:
                id: button
                icon: "arrow-left"
                pos: 10, 10
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press:
                    root.manager.transition.direction = "right"
                    root.manager.current = 'menu'

            MDTextField:
                multiline: True
                mode: "fill"
                hint_text: "ЗАМЕТКА №1"
                size_hint: 0.3, 0.3
                radius: [20, 20, 20, 20]

                pos_hint: {'center_x': 0.19, 'center_y': 0.8}


            MDTextField:
                multiline: True
                mode: "fill"
                hint_text: "ЗАМЕТКА №2"
                size_hint: 0.3, 0.3
                radius: [20, 20, 20, 20]

                pos_hint: {'center_x': 0.50, 'center_y': 0.8}


            MDTextField:
                multiline: True
                mode: "fill"
                hint_text: "ЗАМЕТКА №3"
                size_hint: 0.3, 0.3
                radius: [20, 20, 20, 20]

                pos_hint: {'center_x': 0.81, 'center_y': 0.8}



