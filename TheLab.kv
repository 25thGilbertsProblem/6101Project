ScreenManager:
    MenuScreen:
    NoteScreen:
    SleepScreen:
    TaskScreen:

<MenuScreen>:
    name: "menu"
    MDBoxLayout:
        orientation: 'vertical'


        MDScreen:

            #Task
            MDFloatingActionButton:

                icon: "check-bold"
                pos_hint: {"center_x": .4, "center_y": .6}
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press: root.manager.current = 'task'

            #Sleep
            MDFloatingActionButton:

                icon: "sleep"
                pos_hint: {"center_x": .4, "center_y": .5}
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press: root.manager.current = 'sleep'

            #Notes
            MDFloatingActionButton:

                icon: "bookmark"
                pos_hint: {"center_x": .6, "center_y": .6}
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press: root.manager.current = 'note'


            #Edit
            MDFloatingActionButton:

                icon: "cog"
                pos_hint: {"center_x": .6, "center_y": .5}
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color


<NoteScreen>:
    name: "note"
    MDBoxLayout:
        orientation: 'vertical'

        MDScreen:

            MDFloatingActionButton:
                id: button
                icon: "minus"
                pos: 10, 10
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press: root.manager.current = 'menu'

            MDTextField:
                multiline: True
                mode: "fill"
                hint_text: "ЗАМЕТКА №1"
                size_hint: 0.3, 0.3
                radius: [20, 20, 20, 20]

                pos_hint: {'center_x': 0.19, 'center_y': 0.8}


            MDTextField:
                multiline: True
                mode: "fill"
                hint_text: "ЗАМЕТКА №2"
                size_hint: 0.3, 0.3
                radius: [20, 20, 20, 20]

                pos_hint: {'center_x': 0.50, 'center_y': 0.8}


            MDTextField:
                multiline: True
                mode: "fill"
                hint_text: "ЗАМЕТКА №3"
                size_hint: 0.3, 0.3
                radius: [20, 20, 20, 20]

                pos_hint: {'center_x': 0.81, 'center_y': 0.8}



<SleepScreen>:
    name: "sleep"
    MDBoxLayout:
        orientation: 'vertical'

        MDScreen:

            MDFloatingActionButton:
                id: button
                icon: "minus"
                pos: 10, 10
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press: root.manager.current = 'menu'

            MDFloatingActionButton:
                id: button
                icon: "plus"
                pos: 200, 10



<TaskScreen>:
    name: "task"
    MDBoxLayout:
        orientation: 'vertical'

        MDScreen:

            MDFloatingActionButton:
                id: button
                icon: "minus"
                pos: 10, 10
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                on_press: root.manager.current = 'menu'


