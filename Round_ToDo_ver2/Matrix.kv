MDScreen:

    #atributes


    name: "matrix_todo"


    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDIconButton:
            icon: "chevron-left"
            user_font_size: "64sp"
            pos_hint: {"y": .02}
            theme_text_color: "Custom"
            text_color: 1, 170/255, 23/255, 1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDLabel:
            text: "Матрица дел:"
            pos_hint: {"center_x": .56, "center_y": .95}
            font_size: "35sp"
            bold: True

    MDFloatLayout:

        size_hint: .9, .71
        pos_hint: {"center_x": .5, "center_y": .545}
        canvas:
            Color:
                rgb: ( 238/255, 238/255, 238/255, 1)

            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]

